<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.RegisterActivity">

    <include
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        card_view:cardBackgroundColor="#dfffffff"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_marginBottom="@dimen/padding_8"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:padding="@dimen/height_4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/text_size_16"
                android:layout_marginTop="@dimen/padding_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.app.toza.custom.TfTextView
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="USD"
                    android:layout_width="@dimen/height_140"
                    android:layout_height="wrap_content" />

                <com.app.toza.custom.TfTextView
                    card_view:isBold="true"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/bluse_shade1"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/text_size_16"
                android:layout_marginTop="@dimen/padding_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.toza.custom.TfTextView
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="No. of Participant"
                    android:layout_width="@dimen/height_140"
                    android:layout_height="wrap_content" />

                <com.app.toza.custom.TfTextView
                    card_view:isBold="true"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/text_size_16"
                android:layout_marginTop="@dimen/padding_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.toza.custom.TfTextView
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="Total Cycle"
                    android:layout_width="@dimen/height_140"
                    android:layout_height="wrap_content" />

                <com.app.toza.custom.TfTextView
                    card_view:isBold="true"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/text_size_16"
                android:layout_marginTop="@dimen/padding_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.toza.custom.TfTextView
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="Status"
                    android:layout_width="@dimen/height_140"
                    android:layout_height="wrap_content" />

                <com.app.toza.custom.TfTextView
                    card_view:isBold="true"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="3/4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/text_size_16"
                android:layout_marginTop="@dimen/padding_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.toza.custom.TfTextView
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="Next Cyle Due"
                    android:layout_width="@dimen/height_140"
                    android:layout_height="wrap_content" />

                <com.app.toza.custom.TfTextView
                    card_view:isBold="true"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="21 August 2018"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

     <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardBackgroundColor="#dfffffff"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginBottom="@dimen/padding_8"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:padding="@dimen/height_4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.toza.custom.TfTextView
                    card_view:isBold="true"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="Participants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.app.toza.custom.TfTextView
                    android:layout_marginLeft="@dimen/text_size_16"
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="abc@gmail.com"
                    android:layout_width="@dimen/height_140"
                    android:layout_height="wrap_content" />
                <com.app.toza.custom.TfTextView
                    android:layout_marginLeft="@dimen/text_size_16"
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="abc@gmail.com"
                    android:layout_width="@dimen/height_140"
                    android:layout_height="wrap_content" />

                <com.app.toza.custom.TfTextView
                    android:layout_marginLeft="@dimen/text_size_16"
                    android:layout_marginRight="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:text="krishna@gmail.com"
                    android:layout_width="@dimen/height_140"
                    android:layout_height="wrap_content" />
                <com.app.toza.custom.TfTextView
                android:layout_marginLeft="@dimen/text_size_16"
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="bro@gmail.com"
                android:layout_width="@dimen/height_140"
                android:layout_height="wrap_content" />


            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>