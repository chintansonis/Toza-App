<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.RegisterActivity">
     <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        card_view:cardBackgroundColor="#dfffffff"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_marginBottom="@dimen/padding_8"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginRight="@dimen/padding_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:padding="@dimen/height_4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="@dimen/text_size_16"
            android:layout_marginTop="@dimen/padding_8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.app.toza.custom.TfTextView
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="USD"
                android:layout_width="@dimen/height_140"
                android:layout_height="wrap_content" />

            <com.app.toza.custom.TfTextView
                card_view:isBold="true"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/bluse_shade1"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/text_size_16"
            android:layout_marginTop="@dimen/padding_8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.app.toza.custom.TfTextView
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="No. of Participant"
                android:layout_width="@dimen/height_140"
                android:layout_height="wrap_content" />

            <com.app.toza.custom.TfTextView
                card_view:isBold="true"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/text_size_16"
            android:layout_marginTop="@dimen/padding_8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.app.toza.custom.TfTextView
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="Total Cycle"
                android:layout_width="@dimen/height_140"
                android:layout_height="wrap_content" />

            <com.app.toza.custom.TfTextView
                card_view:isBold="true"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/text_size_16"
            android:layout_marginTop="@dimen/padding_8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.app.toza.custom.TfTextView
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="Status"
                android:layout_width="@dimen/height_140"
                android:layout_height="wrap_content" />

            <com.app.toza.custom.TfTextView
                card_view:isBold="true"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="3/4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/text_size_16"
            android:layout_marginTop="@dimen/padding_8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.app.toza.custom.TfTextView
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="Next Cyle Due"
                android:layout_width="@dimen/height_140"
                android:layout_height="wrap_content" />

            <com.app.toza.custom.TfTextView
                card_view:isBold="true"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="21 August 2018"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <com.app.toza.custom.TfTextView
            android:id="@+id/txtView"
            android:layout_marginRight="@dimen/text_size_16"
            android:textColor="@color/colorPrimaryDark"
            card_view:isBold="true"
            android:gravity="end"
            android:layout_marginTop="@dimen/padding_8"
            android:textSize="@dimen/text_size_16"
            android:layout_gravity="center_vertical"
            android:text="VIEW MORE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>