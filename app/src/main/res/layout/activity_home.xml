<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg"
    tools:context=".ui.HomeActivity">

<LinearLayout
        android:layout_margin="@dimen/padding_15"
        android:id="@+id/topLinear"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.app.toza.custom.TfTextView
            android:layout_weight="1"
            android:textSize="@dimen/padding_30"
            android:textColor="@color/lightgrey"
            android:text="@string/app_name"
            android:layout_gravity="center"
            app:isBold="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgNotification"
            android:src="@drawable/ic_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <ImageView
        android:tint="#edebc3"
        android:tintMode="src_atop"
        android:paddingLeft="@dimen/height_15"
        android:src="@drawable/ic_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
<LinearLayout
    android:layout_below="@+id/topLinear"
    android:id="@+id/secondLinear"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/moneyBag"
        android:src="@drawable/moneybag"
        android:layout_width="@dimen/height_120"
        android:layout_height="@dimen/height_120" />

    <com.app.toza.custom.TfTextView
        android:gravity="center"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/lightgrey"
        android:text="Welcome, Krishna Patel"
        app:isBold="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.app.toza.custom.TfTextView
        android:layout_marginTop="@dimen/padding_15"
        android:gravity="center"
        android:textSize="@dimen/text_size_24"
        android:textColor="@color/white"
        android:text="â‚¬ 503.25"
        app:isBold="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.app.toza.custom.TfTextView
        android:gravity="center"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/grey_blusih"
        android:text="@string/total_bal"
        app:isBold="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout
        android:layout_above="@id/bottom"
        android:layout_marginTop="@dimen/padding_15"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/thirdLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/liToza"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/toza_share"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
                    <com.app.toza.custom.TfTextView
                        android:layout_marginTop="@dimen/padding_8"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="TOZA MONEY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/liCircle"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/circle_payment"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
                    <com.app.toza.custom.TfTextView
                        android:layout_marginTop="@dimen/padding_8"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="CIRCLE PAYMENT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/liWallet"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/wallet"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
                    <com.app.toza.custom.TfTextView
                        android:layout_marginTop="@dimen/padding_8"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="WALLET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/height_30"
            android:layout_marginRight="@dimen/height_50"
            android:layout_marginLeft="@dimen/height_50"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/liVirtualCard"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/card"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <com.app.toza.custom.TfTextView
                    android:layout_marginTop="@dimen/padding_8"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Virtual Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liInternationalTransfer"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/world"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <com.app.toza.custom.TfTextView
                    android:layout_marginTop="@dimen/padding_8"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="International Transfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottom"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.joaquimley.faboptions.FabOptions
            android:id="@+id/fab_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
    </RelativeLayout>


</RelativeLayout>