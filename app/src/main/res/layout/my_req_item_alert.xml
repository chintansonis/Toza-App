<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/height_4"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.RegisterActivity">

    <LinearLayout
        android:padding="@dimen/height_4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


         <LinearLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/kara"
            android:layout_width="@dimen/height_100"
            android:layout_height="@dimen/height_100" />


       <LinearLayout
           android:layout_marginLeft="@dimen/text_size_16"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.app.toza.custom.TfTextView
               android:layout_alignParentTop="true"
               card_view:isBold="true"
               android:textSize="@dimen/text_size_18"
               android:layout_marginTop="@dimen/padding_8"
               android:gravity="left"
               android:layout_gravity="center"
               android:text="Krishna Patel"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <com.app.toza.custom.TfTextView
               android:layout_alignParentTop="true"
               android:textSize="@dimen/text_size_15"
               android:layout_marginTop="@dimen/height_4"
               android:gravity="left"
               android:layout_gravity="center"
               android:text="+91 8957485963"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
           <com.app.toza.custom.TfTextView
               android:layout_alignParentTop="true"
               android:textSize="@dimen/text_size_15"
               android:layout_marginTop="@dimen/height_4"
               android:gravity="left"
               android:layout_gravity="center"
               android:text="INDIA"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </LinearLayout>

         </LinearLayout>
    <View
        android:layout_marginTop="@dimen/padding_15"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_marginTop="@dimen/text_size_16"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.app.toza.custom.TfTextView
                android:layout_marginRight="@dimen/height_4"
                android:textColor="@color/bluse_shade1"
                card_view:isBold="true"
                android:textSize="@dimen/text_size_15"
                android:layout_gravity="center_vertical"
                android:text="@string/euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.app.toza.custom.TfTextView
                android:textColor="@color/bluse_shade1"
                card_view:isBold="true"
                android:textSize="@dimen/text_size_24"
                android:layout_gravity="center"
                android:text="900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <com.app.toza.custom.TfTextView

            android:textColor="@color/gray_material"
            android:textSize="@dimen/text_size_13"
            android:layout_gravity="center"
            android:text="Today Rate (1$ = 1EUR)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginTop="@dimen/text_size_16"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.app.toza.custom.TfTextView
                android:layout_marginRight="@dimen/height_4"
                android:textColor="@color/bluse_shade1"
                card_view:isBold="true"
                android:textSize="@dimen/text_size_20"
                android:layout_gravity="center_vertical"
                android:text="@string/euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.app.toza.custom.TfTextView
                android:textColor="@color/bluse_shade1"
                card_view:isBold="true"
                android:textSize="@dimen/text_size_32"
                android:layout_gravity="center"
                android:text="900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <com.app.toza.custom.TfTextView

            android:textColor="@color/gray_material"
            android:textSize="@dimen/text_size_13"
            android:layout_gravity="center"
            android:text="Payable Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/padding_15"
            android:gravity="right"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.app.toza.custom.TfTextView
                android:layout_marginRight="@dimen/text_size_16"
                android:textColor="@color/colorPrimaryDark"
                card_view:isBold="true"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="TRANSFER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.app.toza.custom.TfTextView
                android:layout_marginRight="@dimen/height_4"
                android:textColor="@color/A400red"
                card_view:isBold="true"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:text="CANCEL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>