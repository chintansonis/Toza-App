<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/img3"
        android:id="@+id/fragmentloginKenBurnsView1"/>

    <com.app.toza.custom.TfTextView
        android:id="@+id/txtSignup"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/padding_15"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text_size_20"
        android:paddingLeft="@dimen/padding_30"
        android:paddingRight="@dimen/padding_30"
        android:paddingTop="@dimen/padding_15"
        android:paddingBottom="@dimen/padding_15"
        android:text="SIGN UP?"
        android:background="@drawable/arc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<RelativeLayout
    android:id="@+id/mainRelative"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_centerInParent="true"
    android:layout_margin="@dimen/padding_15"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.app.toza.custom.TfTextView
        android:gravity="center"
        android:textSize="@dimen/text_size_42"
        android:text="@string/login"
        android:layout_width="match_parent"
        app:isBold="true"
        android:layout_height="wrap_content" />

    <com.app.toza.MEditText.TextFieldBoxes
    android:layout_marginTop="@dimen/padding_30"
    android:id="@+id/text_field_boxes1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:helperTextColor="@color/white"
    app:primaryColor="@color/white"
    app:secondaryColor="@color/white"
    app:panelBackgroundColor="#80808080"
    app:labelText="@string/hint_email"
    app:hasFocus="false"
    app:maxCharacters="20">

    <com.app.toza.MEditText.ExtendedEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:textSize="@dimen/text_size_16"
        android:maxLines="1"
        android:textColorHint="@color/white"/>

</com.app.toza.MEditText.TextFieldBoxes>


    <com.app.toza.MEditText.TextFieldBoxes
        android:id="@+id/text_field_boxes2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:helperTextColor="@color/white"
        app:primaryColor="@color/white"
        app:secondaryColor="@color/white"
        app:panelBackgroundColor="#80808080"
        app:endIcon="@drawable/ic_visibility_black_24dp"
        app:labelText="@string/hint_pass"
        app:hasFocus="false"
        app:maxCharacters="10">

        <com.app.toza.MEditText.ExtendedEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_16"
            android:maxLines="1"
            android:textColorHint="@color/white"/>

    </com.app.toza.MEditText.TextFieldBoxes>


    <com.app.toza.custom.TfTextView
        android:id="@+id/txtForgotPassword"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_size_18"
        android:text="@string/forgot_pass"
        android:gravity="end"
        app:isBold="true"
        android:padding="@dimen/padding_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

    <com.app.toza.custom.TfTextView
        android:id="@+id/txtLogin"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:text="@string/login"
        android:gravity="center"
        android:padding="@dimen/padding_15"
        app:isBold="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>

</RelativeLayout>