            android:name=".ui.TozaRequestActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".ui.VirtualCardViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme"
